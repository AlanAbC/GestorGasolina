<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#FFFFFF"
    android:padding="0dp"
    android:orientation="vertical"
    android:gravity="bottom">

    <TextView
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:background="#000000"
        android:textSize="50dp"
        android:id="@+id/colorGas"/>


    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_marginTop="2dp"
        android:id="@+id/tipoGas"
        android:paddingLeft="15dp"
        android:textColor="#191919"
        android:layout_toRightOf="@id/colorGas"
        android:text="NOMBRE GASOLINA" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:layout_marginTop="3dp"
        android:id="@+id/precio"
        android:textColor="#191919"
        android:layout_below="@id/tipoGas"
        android:paddingLeft="25dp"
        android:layout_toRightOf="@id/colorGas"
        android:text="PRECIO GASOLINA"/>


    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/edit"
        android:background="#FFFFFF"
        android:padding="8dp"
        android:id="@+id/editar"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/tipoGas"
        android:scaleType="centerInside"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:layout_marginTop="3dp"
        android:inputType="numberDecimal"
        android:id="@+id/precioT"
        android:textColor="#191919"
        android:layout_below="@id/tipoGas"
        android:paddingLeft="25dp"
        android:layout_toRightOf="@id/colorGas"
        android:visibility="gone"/>

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/agregar"
        android:background="#000"
        android:padding="8dp"
        android:id="@+id/aceptar"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="-10dp"
        android:layout_toRightOf="@id/tipoGas"
        android:scaleType="centerInside"
        android:visibility="gone"/>

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/borrar"
        android:background="#000"
        android:padding="8dp"
        android:id="@+id/cancelar"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@id/tipoGas"
        android:scaleType="centerInside"
        android:visibility="gone"/>

</RelativeLayout>